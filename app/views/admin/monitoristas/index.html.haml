.row
  .col-lg-12
    .panel.panel-default.panel-fill
      .panel-heading
        %h3.panel-title
          Monitoristas
      .panel-body
        %table.table.table-bordered.table-hover.table-condensed
          %thead
            %tr
              %th #
              %th NOMBRE
              %th USUARIO
              %th CORREO
              %th TELEFONO
              %th ACCIONES
          %tbody
            - @monitoristas.each.with_index(1) do |monitorista, index|
              %tr
                %td= index
                %td= monitorista.nombre
                %td= monitorista.username
                %td= monitorista.email
                %td= monitorista.telefono
                %td
                  = link_to 'Ver', admin_monitorista_path(monitorista), class: 'btn btn-info'
                  = link_to 'Editar', edit_admin_monitorista_path(monitorista), class: 'btn btn-warning'
