.row
  .col-lg-12
    .panel.panel-default.panel-fill
      .panel-heading
        %h3.panel-title
          Monitorista #{@monitorista.nombre}
      .panel-body
        %table.table.table-bordered.table-hover.table-condensed
          %thead
            %tr
              %th NOMBRE
              %th USUARIO
              %th CORREO
              %th TELEFONO
              %th ACCIONES
          %tbody
            %tr
              %td= @monitorista.nombre
              %td= @monitorista.username
              %td= @monitorista.email
              %td= @monitorista.telefono
              %td= link_to 'Editar', edit_admin_monitorista_path(@monitorista), class: 'btn btn-warning'
  
